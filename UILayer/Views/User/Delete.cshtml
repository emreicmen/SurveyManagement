@model EntityLayer.SystemUsers

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-body pt-4 p-3">
                        <ul class="list-group">

                            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                <div class="d-flex flex-column">
                                    <h6 class="mb-3 text-sm">@Model.Name  @Model.Surname</h6>
                                    <span class="mb-2 text-xs">Authorization: <span class="text-dark font-weight-bold ms-sm-2">@Model.Authorization</span></span>
                                    <span class="mb-2 text-xs">Email Address: <span class="text-dark ms-sm-2 font-weight-bold">@Model.Email</span></span>
                                    <span class="mb-2 text-xs">Password: <span class="text-dark ms-sm-2 font-weight-bold">@Model.Password</span></span>
                                    <span class="mb-2 text-xs">CompanyID: <span class="text-dark ms-sm-2 font-weight-bold">@Model.CompanyID</span></span>
                                    <span class="mb-2 text-xs">Country: <span class="text-dark ms-sm-2 font-weight-bold">@Model.Country</span></span>
                                    <span class="mb-2 text-xs">City: <span class="text-dark ms-sm-2 font-weight-bold">@Model.City</span></span>
                                </div>
                                <div class="ms-auto text-end">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                        <a href="/User/Index" class="btn btn-primary">Back to Users</a>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
