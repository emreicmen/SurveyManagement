@using EntityLayer.ValueObject
@using EntityLayer
@using UILayer.Models

@model RegisterViewModel

<body class="g-sidenav-show  bg-gray-200">

    @*Navbar start*@
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href="/Home/Index">
                <img src="../assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">@CurrentSession.User.Authorization.ToString()</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white " href="/Home/Index">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="/Poll/Index">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Surveys</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="/User/ProfileDetail">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">person</i>
                        </div>
                        <span class="nav-link-text ms-1">@CurrentSession.User.UserName.ToString()</span>
                    </a>
                </li>

                @if (CurrentSession.User.Authorization.ToString() == "admin" || CurrentSession.User.Authorization.ToString() == "manager")
                {
                    <li class="nav-item">
                        <a class="nav-link text-white ">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">receipt_long</i>
                            </div>
                            <span class="nav-link-text ms-1">Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="/Company/Index">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">view_in_ar</i>
                            </div>
                            <span class="nav-link-text ms-1">Companies</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="/Customer/Index">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">format_textdirection_r_to_l</i>
                            </div>
                            <span class="nav-link-text ms-1">Customers</span>
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Account pages</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active bg-gradient-primary">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">assignment</i>
                            </div>
                            <span class="nav-link-text ms-1">Add User</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="sidenav-footer position-absolute w-100 bottom-0 ">
            <div class="mx-3">
                <a class="btn bg-gradient-primary mt-4 w-100" href="/Home/Logout" type="button">Sign Out</a>
            </div>
        </div>
    </aside>
    @*Navbar end*@

    <main class="main-content  mt-0">
        <section>
            <div class="page-header min-vh-100">
                <div class="container">
                    <div class="row">
                        <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
                            <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center"
                                 style="background-image: url('../assets/img/illustrations/illustration-signup.jpg'); background-size: cover;">
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
                            <div class="card card-plain">
                                <div class="card-header">
                                    <h4 class="font-weight-bolder">Add System User</h4>
                                </div>
                                @using (Html.BeginForm())
                                {
                                    <div class="card-body">
                                        @Html.ValidationSummary(false)
                                        <form role="form">
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Authorization, new { @class = "form-control", placeholder = "Type Authorization" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Type Name" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Type Surname" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Type Username" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Type Email" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Type Password" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Age, new { @class = "form-control", placeholder = "Type Age" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.Country, new { @class = "form-control", placeholder = "Type Country" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Type City" })
                                            </div>
                                            <div class="input-group input-group-outline mb-3">
                                                @Html.TextBoxFor(model => model.CompanyID, new { @class = "form-control", placeholder = "Type CompanyID" })
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Add User</button>
                                            </div>
                                            <div class="text-center">
                                                <a class="btn bg-gradient-primary mt-4 w-100" href="/User/Index" type="button">Back to Users</a>
                                            </div>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
